# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=replace_me
TELEGRAM_WEBHOOK_URL=https://your-public-url/webhook
TELEGRAM_WEBHOOK_SECRET=replace_me_secret

# OpenAI / LLM Providers
OPENAI_API_KEY=replace_me
# ANTHROPIC_API_KEY=
# GROQ_API_KEY=
# COHERE_API_KEY=
# HUGGINGFACE_API_KEY=

# Database
DATABASE_URL=sqlite+aiosqlite:///./data/telegram_agent.db
DATABASE_ECHO=false

# Ngrok (dev only)
NGROK_AUTHTOKEN=
NGROK_AUTO_UPDATE=true
NGROK_PORT=8000
NGROK_REGION=us
NGROK_TUNNEL_NAME=telegram-agent

# App Settings
DEBUG=true
LOG_LEVEL=INFO
ENVIRONMENT=development
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
SESSION_IDLE_TIMEOUT_MINUTES=480

# Image Processing
IMAGE_STORAGE_PATH=./data
MAX_IMAGE_SIZE_MB=10
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,webp

# Vector Search
SIMILARITY_THRESHOLD=0.7
MAX_SIMILAR_IMAGES=5

# Background Jobs
ENABLE_BACKGROUND_JOBS=true
MAX_CONCURRENT_JOBS=3

# Rate Limiting (example defaults)
RATE_LIMIT_PER_USER_PER_MINUTE=10
RATE_LIMIT_PER_CHAT_PER_MINUTE=20

# Monitoring
STRUCTURED_LOGGING=true
LOG_FILE_PATH=./logs/app.log
LOG_ROTATION_SIZE=10MB
LOG_RETENTION_DAYS=30

# Admin UI
ADMIN_SECRET_KEY=change_me
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me

# MCP
MCP_SERVER_DISCOVERY=true
MCP_SERVERS_CONFIG_PATH=./config/mcp_servers.json
