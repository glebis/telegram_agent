# Core
TELEGRAM_BOT_TOKEN=
OPENAI_API_KEY=
DATABASE_URL=sqlite:///data/telegram_agent.db
TELEGRAM_WEBHOOK_URL=
TELEGRAM_WEBHOOK_SECRET=
ENVIRONMENT=development

# Claude Code
CLAUDE_CODE_WORK_DIR=~/Research/vault
CLAUDE_CODE_MODEL=sonnet
# Tool access control (comma-separated Claude Code SDK tool names)
# Default: Read,Write,Edit,Glob,Grep,Bash
# Read-only example: CLAUDE_ALLOWED_TOOLS=Read,Glob,Grep
# CLAUDE_ALLOWED_TOOLS=Read,Write,Edit,Glob,Grep,Bash
# CLAUDE_DISALLOWED_TOOLS=WebFetch,WebSearch

# Webhook safety
WEBHOOK_MAX_BODY_BYTES=1048576
WEBHOOK_RATE_LIMIT=120
WEBHOOK_RATE_WINDOW_SECONDS=60
WEBHOOK_MAX_CONCURRENCY=100
# Admin/API guardrails
API_MAX_BODY_BYTES=1000000

# Image safety
MAX_IMAGE_BYTES=6291456
ALLOWED_IMAGE_EXTS=jpg,jpeg,png,webp

# Worker queue
ALLOW_CUSTOM_COMMANDS=false
