<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.telegram-agent.health</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>__PROJECT_ROOT__/scripts/health_check.sh</string>
    </array>

    <key>WorkingDirectory</key>
    <string>__PROJECT_ROOT__</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PORT</key>
        <string>8847</string>
        <key>ENV_FILE</key>
        <string>__PROJECT_ROOT__/.env.local</string>
        <key>SERVICE_LABEL</key>
        <string>com.telegram-agent.bot</string>
        <key>HOST</key>
        <string>127.0.0.1</string>
    </dict>

    <key>StartInterval</key>
    <integer>60</integer>
    <key>RunAtLoad</key>
    <true/>

    <key>StandardOutPath</key>
    <string>__PROJECT_ROOT__/logs/launchd_health.log</string>
    <key>StandardErrorPath</key>
    <string>__PROJECT_ROOT__/logs/launchd_health.err</string>
</dict>
</plist>
