[Unit]
Description=Telegram Agent (FastAPI + Telegram Bot)
After=network.target docker.service
Wants=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/telegram_agent
EnvironmentFile=/opt/telegram_agent/.env
ExecStart=/usr/bin/docker compose up -d
ExecStop=/usr/bin/docker compose down
TimeoutStartSec=120
TimeoutStopSec=60
Restart=on-failure

[Install]
WantedBy=multi-user.target
