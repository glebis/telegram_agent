<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.telegram-agent.bot</string>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/bash</string>
        <string>/Users/server/ai_projects/telegram_agent/scripts/run_agent_launchd.sh</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Users/server/ai_projects/telegram_agent</string>

    <key>EnvironmentVariables</key>
    <dict>
        <key>PORT</key>
        <string>8000</string>
        <key>ENV_FILE</key>
        <string>/Users/server/ai_projects/telegram_agent/.env.local</string>
        <key>HOST</key>
        <string>0.0.0.0</string>
        <key>PYTHON_BIN</key>
        <string>/opt/homebrew/bin/python3.11</string>
        <key>PATH</key>
        <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin</string>
    </dict>

    <key>KeepAlive</key>
    <dict>
        <key>SuccessfulExit</key>
        <false/>
    </dict>

    <key>RunAtLoad</key>
    <true/>

    <key>StandardOutPath</key>
    <string>/Users/server/ai_projects/telegram_agent/logs/launchd_bot.log</string>
    <key>StandardErrorPath</key>
    <string>/Users/server/ai_projects/telegram_agent/logs/launchd_bot.err</string>
</dict>
</plist>
