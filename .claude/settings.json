{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-commit-tests.sh",
            "timeout": 180
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/auto-format-python.sh",
            "timeout": 15
          },
          {
            "type": "command",
            "command": ".claude/hooks/run-contact-tests.sh",
            "timeout": 30
          },
          {
            "type": "command",
            "command": ".claude/hooks/validate-defaults-yaml.sh",
            "timeout": 30
          }
        ]
      }
    ]
  }
}
